{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build", 
            "command": "mingw32-make.exe", 
            "args": [ 
                "target=${workspaceRootFolderName}.exe"
            ],
            "type": "shell",
            "problemMatcher": []
        }, 
        {
            "label": "build-debug",
            "command": "mingw32-make.exe",
            "args": [
                "target=${workspaceRootFolderName}.exe",
                "DEBUG=-g", 
                "PREDEF=Debug" 
            ],
            "type": "shell"
        }, 
        {
            "label": "clean",
            "command": "mingw32-make.exe",
            "args": [
                "clean",
                "target=${workspaceRootFolderName}.exe"
            ],
            "type": "shell",
            "problemMatcher": []
        }, 
        {
            "label": "runing",
            "command": "./runExcute.sh",
            "args": [
                "${workspaceRootFolderName}.exe" 
            ],
            "type": "shell"
        } 
    ]
}